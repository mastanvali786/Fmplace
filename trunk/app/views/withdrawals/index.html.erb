<div style="color:#30a0be;font-size:14px;font-weight:bold;padding:15px 0px 5px 20px;">
  <span>
    Withdrawals
  </span>
</div>
<table border="0" cellpadding="3" cellspacing="6" id="withdrawals" style="padding-left:20px;">
  <thead>
    <tr>
      <th>Class</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td>
          <%= payment.klass.titleize %>
        </td>
        <td>
          <%= payment.receiver.name %>
        </td>
        <td>
          <%= payment.type.titleize %>
        </td>
        <td>
          <%= yes_no payment.approved? %>
        </td>
        <td>
          <%= payment.approvedOn %>
        </td>
        <td>
          <% if payment.approved? %>
            <%= payment.approver.name %>
          <% end %>
        </td>
        <td>
          <% unless payment.approved? %>
            <%= link_to "Approve", approve_payment_path(payment),  method: :put %>
          <% end %>
        </td>
      </tr>
      <tr></tr>
    <% end %>
  </tbody>
</table>
<%= paginate @payments %>