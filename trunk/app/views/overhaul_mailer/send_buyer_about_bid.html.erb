<% else %>
  <p><b>Attachments:</b>&nbsp;</p>
  <ul style="line-height: 21px;">
    <% @bid.attachments.each do |attachment| %>
      <li>
        <a href="<%=SITE_URL%><%= attachment.url %>" style="font-size:1em" >
        <%= attachment.name %>
        </a>
      </li>
   <% end %>
  </ul>
<% end %>

