<style>
.User_label{
font-size:12px;
margin-bottom:20px;
}
.continue{
margin:20px 0;
}
 .password_head{
font-size: 28px;
padding: 20px 0px;
}
.getnew_password {
font-size: 20px;
padding: 10px 0px;
}
.password_getway{
font-size: 15px;
padding: 5px 0px;
}
.email_address{
font-size: 15px;
padding: 20px 0px 0px;
}
.np_container {
min-height:300px;
}
.bget_started{
  width: 260px;
}
</style>

<div class="main_container">
  <div class="container np_container">
	  <h2 class="getnew_password">Resend confirmation instructions</h2>
	  <h6 class="password_getway">
    	Enter the information below and we'll send you again an email for confirmation of your account.
    </h6>
		<div class="row">
	    <div class="col-md-5">
	      <label class="email_address">
	        Email Address
	      </label>
				<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
				  <div><%= f.email_field :email, autofocus: true,:class=>"form-control"%></div>

				  <div><%= f.submit "Resend confirmation instructions",:class=>"btn btn-warning bget_started continue" %></div>
				<% end %>
			</div>
		</div>
  </div>
</div>