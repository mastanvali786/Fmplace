<div class="ds main_container">
  <div class="container user_profile">
   <%= render(:partial => '/projects/dashboard_header') %> 
     <aside class="user_left1">
 <%= render partial: "menu" %>
    </aside>
    <section class="row user_right1">
      <div style="padding-left:40px">
        <div class="edit_plbl">Biography</div>
        <!-- <div style="color:red;font-size:10px;padding-bottom:0px;padding-top:5px;padding-left:14px;">* Required</div> -->
        <%= form_for @biography,  url: biography_path, :html => {"data-parsley-validate" => true} do |b| %>
          <div class="row">
            <div class="col-md-10">
              <label class="alg_reg reg_lbl ftwg100">About You - Max 1000 characters *</label>
              <%= b.text_area :summary, :class=>'form-control text_area description','data-parsley-required'=>"true",'data-parsley-required-message'=>'Please enter your biography detail', rows: 10, maxlength: "1000", value: @biography.present? ? @biography.summary : ""  %>
              <h6 class="pull-right"><span class="char">1000</span> characters left</h6>
            </div>
          </div>
          <br>
            <div class="form-group">
              <%= b.submit "Submit", class: "btn btn-warning" %>
              <a class="btn btn-default cancel" href="/account/public_profile">Cancel</a>
            </div>
        <% end %>
      </div>
    </section>
  </div>
  </div>

  <script type="text/javascript">

    $(document).ready(function(){
      var maxLength = 1000;
      $('.description').keyup(function() {
        var length = $(this).val().length;
        var length = maxLength-length;
        $('.char').text(length);
      });
  });
  </script>